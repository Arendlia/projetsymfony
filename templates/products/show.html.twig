{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="d-flex m-5 p-2"> 
<div class="card mt-5 mb-3 ml-5" style="max-width: 80%; height:80%;">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="{{ (products.image ? vich_uploader_asset(products) : asset('images/gameboy.jpg'))|imagine_filter('product_thumbnail')}}" class="img-fluid rounded-start" alt="produit">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{products.name}}</h5>
          <p class="card-text">{{products.description}}</p>
          <p class="card-text">Si ce jeu t'interesse contacte le propri√©taite ici: {{products.user.username}}</p>
          <p class="card-text"><small class="text-muted">{{products.updatedAt|date("d/m/Y")}}</small></p>
        </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
